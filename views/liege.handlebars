<div class="box--form">
	<div class="box--title">Add Vassal</div>
	<hr/>
	<div class="box--content">
		<form action="/lieges/{{liegeId}}/vassal/add" method="POST">
			<label for="name">Vassal Name</label>
			<input type="text" name="name">
			<input type="submit" class="btn" value="Add New Vassal" method="POST">
		</form>
	</div>
</div>

<div class="box--header">{{liegeName}}</div>

{{#each allVassals as |vassal|}}
	<div class="box">
			<div class="box--title">{{vassal.name}}</div>
		<hr/>
		<form action="/lieges/{{../liegeId}}/vassals/{{vassal.id}}/remove" method="POST">
			<input type="submit" class="btn" value="Remove" method="post">			
		</form>
	</div>
{{/each}}
